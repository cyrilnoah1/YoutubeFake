<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">

    <Transition
        app:constraintSetEnd="@layout/arscene_scene_02"
        app:constraintSetStart="@layout/arscene_scene_01"
        app:duration="1000">

        <OnSwipe
            app:dragDirection="dragDown"
            app:touchAnchorId="@+id/ivVideo"
            app:touchAnchorSide="bottom" />

    </Transition>


    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/ivVideo"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aplToolbar"
            motion:ignore="DuplicateIds" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/ivVideo"
            android:layout_width="230dp"
            android:layout_height="150dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="center"
            motion:ignore="DuplicateIds"
            motion:layout_constraintBottom_toTopOf="@+id/bnMainNavigation"
            motion:layout_constraintEnd_toEndOf="parent" />

    </ConstraintSet>


</MotionScene>